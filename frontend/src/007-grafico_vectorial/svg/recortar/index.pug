        // Recortar
        defs
          clipPath#recorte
            rect(x="50" y="50" width="200" height="100")
              animate(attributeName="y" from="15" to="120" dur="5s" repeatCount="indefinite")

        circle(cx="150" cy="120" r="100" clip-path="url(#recorte)" fill="#304ffe")
    
